{
  "name": "dappnode-ipfs-replicator",
  "version": "1.0.0",
  "description": "Simple IPFS replicator to mantain DAppNode's content",
  "main": "index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "npm run dev:file src/index.ts",
    "dev:file": "npm run dev-vars ts-node",
    "test": "npm run test:file \"./{,!(node_modules)/**}/*.test.ts\" ",
    "test:file": "TEST=true mocha -r ts-node/register --exit ",
    "test:int": "npm run test:int:file \"./{,!(node_modules)/**}/*.test.int.ts\" ",
    "test:int:file": "npm run dev-vars mocha -r ts-node/register --exit",
    "dev-vars": "NODE_ENV=development WEB3_HOST=https://mainnet.infura.io/v3/bb15bacfcdbe45819caede241dcf8b0d IPFS_HOST=ipfs.dappnode.io",
    "lint": "./node_modules/.bin/eslint . --ext .ts --fix",
    "pre-commit": "npm run lint && npm run test",
    "bundle": "npx webpack"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dapplion/DAppNode_IPFS_Replicator.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/dapplion/DAppNode_IPFS_Replicator/issues"
  },
  "homepage": "https://github.com/dapplion/DAppNode_IPFS_Replicator#readme",
  "dependencies": {
    "async": "^3.1.0",
    "ethjs": "^0.4.0",
    "ethjs-ens": "^2.0.1",
    "ipfs-http-client": "^38.0.0",
    "is-ipfs": "^0.6.1",
    "level": "^5.0.1",
    "lodash": "^4.17.15",
    "lowdb": "^1.0.0",
    "pretty-bytes": "^5.2.0",
    "request": "^2.88.0",
    "semver": "^6.0.0",
    "timestring": "^5.0.1",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/async": "^3.0.2",
    "@types/chai": "^4.2.3",
    "@types/lowdb": "^1.0.9",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.7.7",
    "@types/semver": "^6.0.2",
    "@types/sinon": "^7.0.13",
    "chai": "^4.2.0",
    "eslint": "^5.16.0",
    "mocha": "^6.2.0",
    "prettier": "^1.17.0",
    "proxyquire": "^2.1.0",
    "ts-node": "^8.4.1",
    "typescript": "^3.6.3",
    "webpack": "^4.30.0",
    "webpack-cli": "^3.3.1"
  }
}
